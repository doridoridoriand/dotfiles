[push]
  default = tracking  # ワークツリーのブランチのみプッシュ
[alias]
  alias = !git config --list | grep alias | awk -F'.' '{print $2}'
  b = branch -a
  co = commit
  ch = checkout
  di = diff
  l = log
  lg = log --graph --decorate --oneline
  st = status
